			else if (n == 1)
			{
			ledblink(LED_ORANGE_PIN, 1000);
			n++;
		    }
		    else if (n == 2)
		    {
			ledblink(LED_RED_PIN, 1000);
			n++;
		    }
		   else
		   {
		   ledblink(LED_BLUE_PIN, 1000);
		   n++;
		   }
	}
	}

